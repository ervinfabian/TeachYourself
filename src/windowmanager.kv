<SelectableLabel>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<SelectableLabelAnswer>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<MyLabel@ButtonBehavior+Label>:
    text_size: self.size
    valign: 'middle'
    halign: 'center'
    font_size: '13sp'
    color: 0, 0, 0, 1

<RegisterWindow>:
    orientation: "vertical"
    tiUsername: username
    tiPassword: password
    tiEmail: email
    tiConfirmPassword: confirm_password
    spacing: 10
    padding: 150
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/happy.jpg"
    BoxLayout:
        size_hint_y: None
        height: "40dp"
        orientation: "vertical"
        Label:
            text: "Let's register"
            bold: True
            font_size: 32
    BoxLayout:
        orientation: "vertical"
        height: "40dp"
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: "40dp"
        TextInput:
            #input_filter: 'string'
            id: username
            hint_text: "Username"
            multiline: False
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: "40dp"
        TextInput:
            #input_filter: 'string'
            id: email
            hint_text: "Email Address"
            multiline: False
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: "40dp"
        TextInput:
            #input_filter: 'string'
            id: password
            hint_text: "Password"
            multiline: False
            password: True
    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: "40dp"
        TextInput:
            #input_filter: 'string'
            id: confirm_password
            hint_text: "Confirm Password"
            multiline: False
            password: True
    BoxLayout:
        pos: self.parent.pos
        orientation: "vertical"
        size_hint_y: None
        height: "40dp"
        Button:
            pos_hint: {'center_x': 0.5}
            text: "Register"
            font_size: 20
            background_color: 0,0,1,1
            size_hint: .2, .1
            on_press: self.parent.parent.submitUser(app)


<RegisterScreen>:
    name: "register_screen"
    RegisterWindow:
        id: reg

